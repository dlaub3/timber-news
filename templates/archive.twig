{% extends "base.twig" %}
{% block content %}

{% include ['slider.twig'] %}



<section>

	<!-- set archive title -->
	<header class="cat-margin">
	<div class="card-divider card-divider-h1">
	{% if title %}<h1>{{title}}</h1>{% endif %}
	</div>
	</header>

	<!-- display posts -->
	<div id="masonry-container" class="row small-up-1 medium-up-2 large-up-4 align-spaced">
		{% for post in posts %}
		{% include [ 'archive-tease-'~post.post_type~'.twig', 'archive-tease.twig'] %}
		{% endfor %}
	</div>

</section>

{% endblock %}
