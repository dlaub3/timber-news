<aside class="column">

<div class="orbit widget-orbit" role="region" aria-label="Favorite Space Pictures" data-orbit>

  <button class="orbit-previous"><span class="show-for-sr">Previous Slide</span>&#9664;&#xFE0E;</button>
  <button class="orbit-next"><span class="show-for-sr">Next Slide</span>&#9654;&#xFE0E;</button>

  <ul class="orbit-container">

      {% for post in footbox %}
        <li class="orbit-slide">
          <a href="{{post.link}}">
          <figure>
          <img class="orbit-image" src="{{post.thumbnail.src|resize(300, 300)}}" alt="not set">
          <figcaption class="orbit-caption">{{post.title}}</figcaption>
          </figure>
          </a>
        </li>
      {% endfor %}

  </ul>

  <nav class="orbit-bullets">
    {% for post in footbox %}
    <button class="is-active" data-slide="{{loop.index0}}"><span class="show-for-sr"></span></button>
    {% endfor %}
  </nav>

</div>
</aside>
