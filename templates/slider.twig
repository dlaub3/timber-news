{% if slider != null %}

<section>
			<div class="orbit parallax-background" role="region" aria-label="Popular Posts Images" data-orbit>

				<button class="orbit-previous"><span class="show-for-sr">Previous Slide</span>&#9664;&#xFE0E;</button>
				<button class="orbit-next"><span class="show-for-sr">Next Slide</span>&#9654;&#xFE0E;</button>

				<ul class="orbit-container" >

						{% for post in slider %}
					    <li class="orbit-slide">
								<a href="{{post.link}}">
								<figure>
			          <img class="orbit-image" src="{{post.thumbnail.src|resize(1600, 600)}}" alt="Image for {{post.title}}">
			          <figcaption class="orbit-caption caption">
									<h2 class="title">{{post.title}}</h2>
									<div class="preview">
										{{post.get_preview(30, false,false,true)}}
									</div>
								</figcaption>
							</figure>
			          </a>
					    </li>
						{% endfor %}
				</ul>

				<nav class="orbit-bullets">
			    {% for post in slider %}
			    <button class="is-active" data-slide="{{loop.index0}}"><span class="show-for-sr"></span></button>
			    {% endfor %}
			  </nav>

			</div>
</section>

{% endif %}
