{% block content %}


<nav class="pagination text-center" aria-label="Pagination">
    {% if pagination.prev %}
        <a href="{{pagination.prev.link}}" class="pagination-previous prev {{pagination.prev.link|length ? '' : 'invisible'}}">Prev</a>
    {% endif %}
    <ul >
        {% for page in pagination.pages %}
            <li>
                {% if page.link %}
                    <a href="{{page.link}}" class="current{{page.class}}">{{page.title}}</a>
                {% else %}
                    <span class="show-for-sr{{page.class}}">{{page.title}}</span>
                {% endif %}
            </li>
        {% endfor %}
    </ul>
    {% if pagination.next %}
        <a href="{{pagination.next.link}}" class="pagination-next next {{pagination.next.link|length ? '' : 'invisible'}}">Next</a>
    {% endif %}
</nav>


{% endblock %}
